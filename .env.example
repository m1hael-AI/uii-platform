# AI University Environment Variables
# Скопируйте этот файл в .env и заполните значения

# === База данных (PostgreSQL) ===
# Стандартный connection string, работает с любым PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_university

# Для docker-compose (автоматически формируется)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_university

# === OpenAI API ===
# Стандартный API ключ (без vendor lock-in)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# === S3-совместимое хранилище ===
# Supabase Storage / MinIO / AWS S3 / Beget S3
# Для миграции просто меняем endpoint
S3_ENDPOINT_URL=https://your-project.supabase.co/storage/v1/s3
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET_NAME=ai-university
S3_REGION=us-east-1

# === Telegram Bot ===
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret
# Username бота (без @, например: my_university_bot)
TELEGRAM_BOT_USERNAME=my_university_bot

# === JWT Авторизация ===
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=168

# === Приложение ===
APP_ENV=development
DEBUG=true
FRONTEND_URL=http://localhost:3000

# === Next.js Frontend ===
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
